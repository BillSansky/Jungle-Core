using UnityEngine;

namespace Jungle.Events
{
    /// <summary>
    /// ScriptableObject that represents a signal type that can be broadcast throughout the game.
    /// </summary>
    [CreateAssetMenu(fileName = "New Signal", menuName = "Jungle/Events/Signal", order = 100)]
    public class SignalAsset : ScriptableObject
    {
        [TextArea(2, 4)]
        [SerializeField] private string description;

        public string Description => description;

        /// <summary>
        /// Raises this signal to all registered receivers.
        /// </summary>
        public void Raise()
        {
            SignalManager.Instance.RaiseSignal(this);
        }

#if UNITY_EDITOR
        [ContextMenu("Raise Signal (Editor)")]
        private void RaiseSignalInEditor()
        {
            Raise();
        }
#endif
    }
}

